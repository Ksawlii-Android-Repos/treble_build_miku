+		device/phh/treble/overlay \
+		device/phh/treble/overlay-miku
 
 $(call inherit-product, vendor/hardware_overlay/overlay.mk)
 $(call inherit-product, $(SRC_TARGET_DIR)/product/core_64_bit.mk)
